<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFEDD5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF5FB"
        android:paddingStart="20dp"
        android:paddingTop="32dp"
        android:paddingEnd="20dp"
        android:paddingBottom="32dp"
        tools:context=".dashboardAdmin">

        <TextView
            android:id="@+id/tv_bienvenida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="BIENVENIDO"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_nombre_usuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Usuario"
            android:textAlignment="center"
            android:textColor="#666666"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_bienvenida"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/logo_dashboard"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="32dp"
            android:contentDescription="Logo"
            android:src="@drawable/logosplash"
            app:layout_constraintTop_toBottomOf="@id/tv_nombre_usuario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_datetime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Fecha/Hora: --"
            android:textAlignment="center"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/logo_dashboard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/separator"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@id/tv_datetime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_opciones"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="SELECCIONA UNA OPCIÓN"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/separator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/row1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="28dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_opciones"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/icon_crud"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/crud"
                android:contentDescription="Icon CRUD"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_crud_user"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:backgroundTint="#E9B3BC"
                android:text="GESTIÓN DE USUARIO"
                android:textAllCaps="true"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                app:cornerRadius="36dp"
                app:layout_constraintStart_toEndOf="@id/icon_crud"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/icon_crud"
                app:layout_constraintBottom_toBottomOf="@id/icon_crud"
                app:strokeColor="#FFEDD5"
                app:strokeWidth="3dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/row2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/row1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/icon_sensor"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/wifi"
                android:contentDescription="Icon Sensor"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sensor"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:text="GESTIÓN DE SENSOR"
                android:textAllCaps="true"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#fbf1cf"
                app:cornerRadius="36dp"
                app:layout_constraintStart_toEndOf="@id/icon_sensor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/icon_sensor"
                app:layout_constraintBottom_toBottomOf="@id/icon_sensor"
                app:strokeColor="#FFEDD5"
                app:strokeWidth="3dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/row3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/row2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/icon_dev"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/desarrollador"
                android:contentDescription="Icon Dev"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_developer"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:text="DESARROLLADOR"
                android:textAllCaps="true"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#B0C4D7"
                app:cornerRadius="36dp"
                app:layout_constraintStart_toEndOf="@id/icon_dev"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/icon_dev"
                app:layout_constraintBottom_toBottomOf="@id/icon_dev"
                app:strokeColor="#FFEDD5"
                app:strokeWidth="3dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_logout"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="40dp"
            android:text="Cerrar sesión"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:backgroundTint="#F0B0C7"
            app:cornerRadius="24dp"
            app:layout_constraintTop_toBottomOf="@id/row3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>