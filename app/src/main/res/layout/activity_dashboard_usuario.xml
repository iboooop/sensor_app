<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_user_dashboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFEDD5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_user_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF5FB"
        android:paddingStart="20dp"
        android:paddingTop="32dp"
        android:paddingEnd="20dp"
        android:paddingBottom="32dp"
        tools:context=".UserDashboardActivity">

        <!-- Header Bienvenida -->
        <TextView
            android:id="@+id/tv_bienvenida"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="BIENVENIDO"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Nombre Usuario -->
        <TextView
            android:id="@+id/tv_nombre_usuario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            tools:text="Nombre Usuario"
            android:textAlignment="center"
            android:textColor="#666666"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_bienvenida"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Info Departamento -->
        <TextView
            android:id="@+id/tv_departamento_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="Departamento: 101-A"
            android:textAlignment="center"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="italic"
            app:layout_constraintTop_toBottomOf="@id/tv_nombre_usuario"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Logo -->
        <!-- Asegúrate que el archivo sea res/drawable/logosplash.png (minúsculas) -->
        <ImageView
            android:id="@+id/logo_dashboard"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="24dp"
            android:contentDescription="Logo"
            android:src="@drawable/logosplash"
            app:layout_constraintTop_toBottomOf="@id/tv_departamento_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Fecha / Hora -->
        <TextView
            android:id="@+id/tv_datetime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            tools:text="Fecha/Hora: 30/11/2025 10:30 AM"
            android:textAlignment="center"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/logo_dashboard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Separador Visual -->
        <View
            android:id="@+id/separator"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@id/tv_datetime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Título Opciones -->
        <TextView
            android:id="@+id/tv_opciones"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="SELECCIONA UNA OPCIÓN"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/separator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Opción 1: Historial de Accesos -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/row_historial"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_opciones"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Asegúrate que el archivo sea res/drawable/historial.png (minúsculas) -->
            <ImageView
                android:id="@+id/icon_historial"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/historial"
                tools:src="@drawable/historial"
                android:contentDescription="Icono Historial de Accesos"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_historial_accesos"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:text="Historial de Accesos"
                android:textAllCaps="true"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#B0C4D7"
                app:cornerRadius="36dp"
                app:layout_constraintStart_toEndOf="@id/icon_historial"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:strokeColor="#FFEDD5"
                app:strokeWidth="3dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Opción 2: Control Manual -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/row_control_manual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintTop_toBottomOf="@id/row_historial"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Asegúrate que el archivo sea res/drawable/controlmanual.png (minúsculas) -->
            <ImageView
                android:id="@+id/icon_control_manual"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/controlmanual"
                tools:src="@drawable/controlmanual"
                android:contentDescription="Icono Control Manual"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_control_manual"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:text="Control Manual"
                android:textAllCaps="true"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#D1C4E9"
                app:cornerRadius="36dp"
                app:layout_constraintStart_toEndOf="@id/icon_control_manual"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:strokeColor="#FFEDD5"
                app:strokeWidth="3dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <!-- Botón de Cerrar Sesión -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_logout"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#F0B0C7"
            android:text="Cerrar sesión"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:cornerRadius="24dp"
            app:layout_constraintTop_toBottomOf="@id/row_control_manual"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>