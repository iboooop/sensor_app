<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- ===== CONTENEDOR DE BOTONES (CÓDIGO CORREGIDO) ===== -->
        <LinearLayout
            android:id="@+id/botones_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp">

            <!-- Botón "Editar" con app:backgroundTint y textColor -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_editar"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:textAllCaps="false"
                android:textColor="@color/button_text_dark_blue"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:backgroundTint="@color/button_bg_light_blue"
                android:layout_marginBottom="8dp"/>

            <!-- Botón "Ver Eventos" con app:backgroundTint y textColor -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ver_eventos"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Ver Eventos"
                android:textAllCaps="false"
                android:textColor="@color/button_text_dark_brown"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                app:backgroundTint="@color/button_bg_cream"/>
        </LinearLayout>

        <!-- Tu contenido original (esto no cambia) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/botones_container">

            <TextView
                android:id="@+id/tv_nombre_completo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan Pérez"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tv_rol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADMIN"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#666"
                    android:background="#E0E0E0"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tv_estado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACTIVO"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="juan@email.com"
                android:textSize="14sp"
                android:textColor="#555" />

            <TextView
                android:id="@+id/tv_departamento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Torre A - 101"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="#888"
                android:drawablePadding="4dp"
                app:drawableStartCompat="@android:drawable/ic_menu_myplaces"/>

        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>