<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5FB"
    tools:context=".ModificarSensor">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Título -->
        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="MODIFICAR SENSOR"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"/>

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@id/tv_titulo"/>

        <!-- Código Sensor -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_codigo"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Código del Sensor"
            app:layout_constraintTop_toBottomOf="@id/separator">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_codigo_sensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Título Departamento -->
        <TextView
            android:id="@+id/lbl_departamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Departamento:"
            android:layout_marginTop="16dp"
            android:textColor="#666"
            app:layout_constraintTop_toBottomOf="@id/til_codigo"/>

        <!-- ===== CAMBIO: SPINNER REEMPLAZADO POR TEXTVIEW ===== -->
        <TextView
            android:id="@+id/tv_departamento_fijo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="@drawable/bg_textview_disabled"
            tools:text="Torre A - 101"
            android:textSize="16sp"
            android:textColor="#333333"
            app:layout_constraintTop_toBottomOf="@id/lbl_departamento" />
        <!-- ======================================================== -->

        <!-- Título Usuario -->
        <TextView
            android:id="@+id/lbl_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario Asignado:"
            android:layout_marginTop="16dp"
            android:textColor="#666"
            app:layout_constraintTop_toBottomOf="@id/tv_departamento_fijo"/>

        <!-- Spinner Usuario -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_usuario"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="none"
            app:layout_constraintTop_toBottomOf="@id/lbl_usuario">
            <Spinner
                android:id="@+id/spinner_usuario"
                android:layout_width="match_parent"
                android:layout_height="56dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- El resto del layout sigue igual... -->
        <TextView
            android:id="@+id/lbl_tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Sensor:"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/til_usuario"/>

        <RadioGroup
            android:id="@+id/rg_tipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/lbl_tipo">
            <RadioButton
                android:id="@+id/rb_llavero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Llavero"
                android:layout_marginEnd="24dp"/>
            <RadioButton
                android:id="@+id/rb_tarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarjeta" />
        </RadioGroup>

        <TextView
            android:id="@+id/tv_estado_actual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Estado Actual: --"
            android:textAlignment="center"
            android:textStyle="italic"
            android:textColor="#888"
            app:layout_constraintTop_toBottomOf="@id/rg_tipo"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/tv_estado_actual">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_modificar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="GUARDAR CAMBIOS"
                android:layout_marginBottom="12dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_desactivar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="DESACTIVAR (BAJA)"
                android:visibility="gone"
                android:layout_marginBottom="12dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_perdido"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="REPORTAR PERDIDO"
                android:visibility="gone"
                android:layout_marginBottom="12dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_activar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="REACTIVAR SENSOR"
                android:visibility="gone"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>