<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5FB">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Logo"
            android:src="@drawable/logosplash"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="REGISTRAR SENSOR"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/logo" />

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#E0E0E0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_titulo" />

        <!-- Código del Sensor -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_codigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="Código del Sensor (NFC/ID)"
            app:layout_constraintTop_toBottomOf="@id/separator">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_codigo_sensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ETIQUETA DEPARTAMENTO -->
        <TextView
            android:id="@+id/tv_depto_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Seleccione Departamento:"
            android:textColor="#666666"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/til_codigo"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Spinner Departamento (Sin flecha extra) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_departamento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            app:endIconMode="none"
            app:layout_constraintTop_toBottomOf="@id/tv_depto_label">
            <Spinner
                android:id="@+id/spinner_departamento_sensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- ETIQUETA USUARIO -->
        <TextView
            android:id="@+id/tv_usuario_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Asignar a Usuario:"
            android:textColor="#666666"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/til_departamento"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Spinner Usuario (Sin flecha extra) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            app:endIconMode="none"
            app:layout_constraintTop_toBottomOf="@id/tv_usuario_label">
            <Spinner
                android:id="@+id/spinner_usuario_sensor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Selección de Tipo -->
        <TextView
            android:id="@+id/tv_tipo_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Tipo de Dispositivo:"
            android:textColor="#666666"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/til_usuario"
            app:layout_constraintStart_toStartOf="parent"/>

        <RadioGroup
            android:id="@+id/rg_tipo_sensor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_tipo_label"
            app:layout_constraintStart_toStartOf="parent">

            <RadioButton
                android:id="@+id/rb_tarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarjeta"
                android:checked="true"
                android:layout_marginEnd="24dp"/>

            <RadioButton
                android:id="@+id/rb_llavero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Llavero" />
        </RadioGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_registro_sensor"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#fbf1cf"
            android:text="REGISTRAR SENSOR"
            android:textAllCaps="true"
            android:textColor="#8DAEE1"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rg_tipo_sensor" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>